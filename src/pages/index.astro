---
import Base from "@layouts/base.astro"
import Dragonfly from "@components/dragonfly.astro"

const title = "juwee";

---

<Base title={title}>
<div class="flex flex-col gap-9 my-9">
    <div class="dragonfly">
        <Dragonfly />
    </div>

    <ul class="flex flex-col">
        <h1 class="border-t border-b my-3 p-1 text-sm">INDEX</h1>
        <a href="/links">
            <li>[001] links</li>
        </a>
        <a href="/books">
            <li>[002] books</li>
        </a>
        <a href="https://forest.juw.ee">
            <li>[003] forest</li>
        </a>
    </ul>

    <ul>
        <h1 class="border-t border-b my-3 p-1 text-sm">LATEST POSTS</h1>
        <li class="flex max-w-full justify-between">
            <span>i. girlblog</span>
            <span>20240404</span>
        </li>
    </ul>
</div>
</Base>

<style>
    a {
        width: max-content;
    }

    a:hover {
        font-weight: bold;
    }

    .dragonfly {
        width: 100%;
        display: grid;
        overflow: hidden;
        text-align: center;
        font-size: 0.91rem;
    }
</style>
