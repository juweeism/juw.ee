---
import Base from "@layouts/base.astro"
import Dragonfly from "@components/dragonfly.astro"
---

<Base>
<div class="flex flex-col gap-9 my-9">
    <div class="dragonfly dark:text-slate-500 text-zinc-500">
        <Dragonfly />
    </div>

    <ul class="flex flex-col">
        <h1 class="border-t border-b my-3 p-1 text-sm border-zinc-300 dark:border-slate-700">INDEX</h1>
        <a href="/links">
            <li>[001] links</li>
        </a>
        <a href="/library">
            <li>[002] library</li>
        </a>
        <a href="https://forest.juw.ee">
            <li>[003] forest</li>
        </a>
    </ul>

    <ul>
        <h1 class="border-t border-b my-3 p-1 text-sm border-zinc-300 dark:border-slate-700">LATEST POSTS</h1>
        <li class="flex max-w-full justify-between">
            <span>i. girlblog</span>
            <span>20240404</span>
        </li>
    </ul>
</div>
</Base>

<style>
    a {
        width: max-content;
    }

    a:hover {
        font-weight: bold;
    }

    .dragonfly {
        width: 100%;
        display: grid;
        overflow: hidden;
        text-align: center;
        font-size: 75%;
    }
</style>
